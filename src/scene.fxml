<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane onKeyPressed="#handleKey" prefHeight="807.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <VBox fx:id="vbox" layoutY="5.0" prefHeight="800.0" prefWidth="450.0">
         <children>
            <BorderPane VBox.vgrow="NEVER">
               <center>
                  <Label text="Tetrix">
                     <font>
                        <Font name="System Bold" size="40.0" />
                     </font>
                  </Label>
               </center>
            </BorderPane>
            <Canvas fx:id="canvas" height="709.0" width="450.0" VBox.vgrow="ALWAYS" />
            <BorderPane>
               <left>
                  <Label fx:id="score" text="Score : " BorderPane.alignment="CENTER">
                     <font>
                        <Font size="26.0" />
                     </font>
                     <BorderPane.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </BorderPane.margin>
                  </Label>
               </left>
               <right>
                  <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restart" text="Restart" BorderPane.alignment="CENTER" />
               </right>
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </VBox.margin>
            </BorderPane>
         </children>
      </VBox>
   </children>
</Pane>
